<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#008DB8"
    tools:context="com.example.Doctor.DLoginActivity">


    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="3dp"
                android:text="Log In"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:padding="3dp"
                app:srcCompat="@drawable/back_page1" />

        </RelativeLayout>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:text="Welcome To HealthCare"
        android:textAlignment="center"
        android:textColor="#1FA1C8"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/back_shap4">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/logo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="30dp"
                        android:fontFamily="@font/audiowide_regular"
                        android:text="SH"
                        android:textAlignment="center"
                        android:textColor="#008DB8"
                        android:textSize="35sp"
                        android:textStyle="bold"></TextView>


                    <EditText
                        android:id="@+id/edtEmailD"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@+id/logo2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/button_shap5"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:textColorHint="#82D9F3"
                        android:textSize="15dp"></EditText>

                    <EditText
                        android:id="@+id/edtPasswordD"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@+id/edtEmailD"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/button_shap5"
                        android:hint="Password"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:textColorHint="#82D9F3"
                        android:textSize="15dp"></EditText>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/textBtn2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@+id/edtPasswordD"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20sp"
                        android:layout_marginEnd="30dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">


                        <TextView
                            android:id="@+id/btnLoginD"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/button_shap4"
                            android:padding="10dp"
                            android:text="Log In"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:cornerRadius="8dp"></TextView>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/dForgotPasswordD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textBtn2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="31dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="29dp"
                        android:gravity="right"
                        android:text="Forgot Password?"
                        android:textColor="#008DB8"
                        android:textSize="12sp"></TextView>


                    <RelativeLayout
                        android:id="@+id/layour2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dForgotPasswordD"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="10dp"
                            android:layout_toStartOf="@+id/text2"
                            android:background="#E6E6E6"
                            android:text="Hello"></TextView>

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="or"
                            android:textColor="#D3D3D3"></TextView>

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/text2"
                            android:background="#E6E6E6"
                            android:text="Hello"></TextView>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layour3"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@+id/layour2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"

                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/lay1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_shap5">


                            <ImageView
                                android:id="@+id/googleDL"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginHorizontal="1dp"
                                android:layout_marginVertical="1dp"
                                android:background="@drawable/button_shap3"
                                android:padding="10dp"
                                app:srcCompat="@drawable/searchlogo" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/lay2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_shap5">


                            <ImageView
                                android:id="@+id/facebookDL"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginHorizontal="1dp"
                                android:layout_marginVertical="1dp"
                                android:background="@drawable/button_shap3"
                                android:padding="10dp"
                                app:srcCompat="@drawable/facebooklogo" />


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layour1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layour3"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="45dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0sp"
                            android:text="Don't have an account?"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp"></TextView>

                        <TextView
                            android:id="@+id/textSignupD"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" Sign Up"
                            android:textAlignment="center"
                            android:textColor="#008DB8"
                            android:textSize="12sp"
                            android:textStyle="bold"></TextView>

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</RelativeLayout>